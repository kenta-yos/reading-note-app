datasource db {
  provider = "postgresql"
}

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

model Book {
  id            String        @id @default(cuid())
  title         String
  author        String?
  publisher     String?
  publishedYear Int?
  pages         Int
  category      String?
  discipline    String?
  rating        Int?
  notes         String?
  readAt        DateTime?
  createdAt     DateTime      @default(now())
  keywords      BookKeyword[]
}

model BookKeyword {
  id      String @id @default(cuid())
  bookId  String
  keyword String
  count   Int    @default(1)
  book    Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([bookId, keyword])
  @@index([keyword])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
}

model AnnualGoal {
  id        String   @id @default(cuid())
  year      Int      @unique
  pageGoal  Int
  createdAt DateTime @default(now())
}
